<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- android:background="@drawable/bottom_sheet_background" -->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/character"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="15dp"
            android:text="Iron Man"
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/closeDialog"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_down"
            android:backgroundTint="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/colorDivider" />

    <RelativeLayout
        android:id="@+id/expandable_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="140dp"
            android:layout_height="180dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:scaleType="fitXY"
            android:src="@drawable/thor" />

        <TextView
            android:id="@+id/characterNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/characterImage"
            android:text="Name"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/characterName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/characterNameLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/characterImage"
            android:text="Anthony Stark"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/characterCurrentAliasLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_below="@id/characterName"
            android:layout_toEndOf="@id/characterImage"
            android:text="Current Alias"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/characterCurrentAlias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/characterCurrentAliasLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/characterImage"
            android:text="Iron Man"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/characterCreatorsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/characterCurrentAlias"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/characterImage"
            android:text="Creators"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/characterCreators"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/characterCreatorsLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/characterImage"
            android:text="@string/creators_test"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/characterFirstAppearanceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_below="@id/characterCreators"
            android:layout_toEndOf="@id/characterImage"
            android:text="First Appearance"
            android:textColor="@color/textColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/characterFirstAppearance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/characterFirstAppearanceLabel"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="2dp"
            android:layout_toEndOf="@id/characterImage"
            android:text="@string/first_appearance_test"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/characterDescriptionLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        android:text="Description"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/characterDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/character_description_test"
        android:textColor="@color/textColor"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/characterPowersAndMembersLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="1dp"
        android:text="Powers"
        android:textColor="@color/textColor"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/characterPowers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        android:text="@string/powers_test"
        android:textColor="@color/textColor"
        android:textSize="15sp" />



</LinearLayout>